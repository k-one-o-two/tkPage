{
  "name": "tkpage",
  "version": "0.0.1",
  "description": "personal page",
  "main": "index.html",
  "scripts": {
    "minify:js":"minify dist/bundle.js > dist/bundle.min.js && rm dist/bundle.js",
    "minify:css":"minify style.css > dist/style.min.css",
    "copy:index":"cp index.html dist/index.html && sed -i 's/bundle.js/bundle.min.js/' dist/index.html && sed -i 's/style.css/style.min.css/' dist/index.html",
    "copy:images": "cp -r img dist/img",
    "bundle:js": "browserify flickr.js -o dist/bundle.js",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run bundle:js && npm run minify:js && npm run minify:css && npm run copy:index && npm run copy:images",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-one-o-two/tkPage.git"
  },
  "author": "k102",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k-one-o-two/tkPage/issues"
  },
  "homepage": "https://github.com/k-one-o-two/tkPage#readme",
  "dependencies": {
    "browserify": "^17.0.0",
    "flickr-sdk": "^4.0.0",
    "minify": "^8.0.3"
  }
}
